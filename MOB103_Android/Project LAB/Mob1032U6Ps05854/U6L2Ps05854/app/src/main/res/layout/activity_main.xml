<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/Lineintro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/intro"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Nguyen Duc Thanh Tam Ps05854"
            android:gravity="center"/>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Input Text"
            android:padding="20sp"
            android:textSize="20sp"
            android:layout_below="@+id/intro"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:paddingLeft="20sp"
        android:layout_below="@+id/Lineintro"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Output Text"
        android:textSize="20sp"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/editText"
        android:textStyle="bold"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText"
        android:paddingLeft="20sp"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/textView"
        android:gravity="center">
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save To File"
            android:id="@+id/button_save"
            android:layout_below="@+id/textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Read File"
            android:id="@+id/button_read"
            android:layout_alignTop="@+id/button_save"
            android:layout_toRightOf="@+id/button_save"
            android:layout_toEndOf="@+id/button_save" />
    </LinearLayout>

</RelativeLayout>
